{
  "swagger": "2.0",
  "info": {
    "version": "0.1.0",
    "title": "rythm_api",
    "description": "RESTful api for rythm app"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Auth",
      "description": "API for authorization/authenticating users in the system"
    },
    {
      "name": "Users",
      "description": "API for users in the system"
    },
    {
      "name": "Todo",
      "description": "API for handling todo lists in the system"
    }
  ],
  "securityDefinitions": {
    "JWT": {
      "description": "",
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/todo/insert": {
      "post": {
        "tags": [
          "Todo"
        ],
        "summary": "Submit new todo list",
        "description": "Submit new todo list",
        "security": [
          {
            "JWT": []
          }
        ],
        "parameters": [
          {
            "name": "todo",
            "in": "body",
            "description": "Todo list user is adding",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New todo",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/todo/insertmany": {
      "post": {
        "tags": [
          "Todo"
        ],
        "summary": "Insert many todos",
        "description": "Insert many todos",
        "security": [
          {
            "JWT": []
          }
        ],
        "parameters": [
          {
            "name": "todo",
            "in": "body",
            "description": "List of todos",
            "schema": {
              "$ref": "#/definitions/ListTodo"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "List of todos",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/todo/edit": {
      "put": {
        "tags": [
          "Todo"
        ],
        "summary": "Update current todo, can only edit own todo as identified by jwt",
        "description": "Todo must be owned by JWT holder",
        "security": [
          {
            "JWT": []
          }
        ],
        "parameters": [
          {
            "name": "todo",
            "in": "body",
            "description": "Todo list user is updating",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Updated todo",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/todo/remove": {
      "delete": {
        "tags": [
          "Todo"
        ],
        "summary": "Delete a todo, can only delete own todo as identified by JWT",
        "description": "TODO_ID must be owned by JWT holder",
        "security": [
          {
            "JWT": []
          }
        ],
        "parameters": [
          {
            "name": "TODO_ID",
            "in": "body",
            "description": "Delete by todo_id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Todo_id and message",
            "schema": {
              "$ref": "#/definitions/UpdatedSuccessfully"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/todo/thumbs": {
      "put": {
        "tags": [
          "Todo"
        ],
        "summary": "Increase or decrease a todo thumbs, can only thumb up a different users todo as identified by JWT",
        "description": "Increase or decrease a todo thumbs",
        "security": [
          {
            "JWT": []
          }
        ],
        "parameters": [
          {
            "name": "todo",
            "in": "body",
            "description": "Tell the server thumb up or thumb down",
            "schema": {
              "$ref": "#/definitions/TodoThumbs"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Updated todo",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/todo/comment": {
      "put": {
        "tags": [
          "Todo"
        ],
        "summary": "Adds a comment to a todo",
        "description": "Adds a comment to a todo",
        "security": [
          {
            "JWT": []
          }
        ],
        "parameters": [
          {
            "name": "todo",
            "in": "body",
            "description": "Tell the server thumb up or thumb down",
            "schema": {
              "$ref": "#/definitions/TodoThumbs"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Todo",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/todo/query?category={CATEGORY}&todo_id={TODO_ID}&search={STRING}&user_id={USER_ID}&username={USERNAME}": {
      "get": {
        "tags": [
          "Todo"
        ],
        "summary": "Get a list of todos",
        "description": "If JWT does not match user_id no private todos will be returned.",
        "security": [
          {
            "JWT": []
          }
        ],
        "parameters": [
          {
            "name": "CATEGORY",
            "in": "query",
            "description": "Query based on category",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "TODO_ID",
            "in": "query",
            "description": "Query based on todo_id",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "SEARCH",
            "in": "query",
            "description": "Query titles and descriptions based on string",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "USER_ID",
            "in": "query",
            "description": "Query based on user_id",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "USERNAME",
            "in": "query",
            "description": "Query based on username",
            "schema": {
              "type": "string"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list of todos",
            "schema": {
              "$ref": "#/definitions/ListTodos"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/github": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Authenticate with github",
        "description": "Oauth2 authentication",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/google": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Authenticate with google",
        "description": "Oauth2 authentication",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/twitter": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Authenticate with twitter",
        "description": "Oauth1 authentication",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/linkedin": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Authenticate with linkedin",
        "description": "Oauth2 authentication",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register new user in system",
        "description": "Register new user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/activate/{ACTIVATION_TOKEN}": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Activate user",
        "parameters": [
          {
            "name": "ACTIVATION_TOKEN",
            "in": "path",
            "required": true,
            "description": "ACTIVATION_TOKEN for user",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "User Login",
        "description": "Login user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "required": [
                "email",
                "password"
              ],
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User logged in successfully.",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "security": [
          {
            "JWT": []
          }
        ],
        "summary": "Get users",
        "responses": {
          "200": {
            "description": "List of users",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    },
    "/users/{USER_ID}": {
      "get": {
        "tags": [
          "Users"
        ],
        "security": [
          {
            "JWT": []
          }
        ],
        "parameters": [
          {
            "name": "USER_ID",
            "in": "path",
            "required": true,
            "description": "User_id for desired user",
            "type": "string"
          }
        ],
        "description": "Get a user by user_id or username. If neither is found will return all users if JWT indicates correct role.",
        "responses": {
          "200": {
            "description": "User profile",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Todo": {
      "required": [
        "user_id",
        "username",
        "private",
        "title",
        "description",
        "category",
        "list"
      ],
      "properties": {
        "user_id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "todo_id": {
          "type": "string"
        },
        "master": {
          "type": "boolean"
        },
        "master_id": {
          "type": "string"
        },
        "private": {
          "type": "boolean"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "list": {
          "type": "array",
          "$ref": "#/definitions/TodoItem"
        },
        "comments": {
          "type": "array",
          "$ref": "#/definitions/Comment"
        }
      }
    },
    "Comment": {
      "properties": {
        "todo_id": {"type": "string"},
        "user_id": {"type": "string"},
        "text": {"type": "string"}
      }
    },
    "TodoThumbs": {
      "required": [
        "todo_id",
        "thumb"
      ],
      "properties": {
        "todo_id": {
          "type": "string"
        },
        "thumb": {
          "type": "string",
          "description": "thumbUp or thumbDown"
        }
      }
    },
    "TodoComment": {
      "required": [
        "todo_id",
        "user_id",
        "text"
      ],
      "properties": {
        "todo_id": {"type": "string"},
        "user_id": {"type": "string"},
        "text": {"type": "string"}
      }
    },
    "TodoItem": {
      "required": [
        "title",
        "description"
      ],
      "properties": {
        "item_name": {
          "type": "string"
        },
        "instructions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string"
        }
      }
    },
    "ListTodos": {
      "required": [
        "list"
      ],
      "properties": {
        "list": {
          "type": "array",
          "$ref": "#/definitions/Todo"
        }
      }
    },
    "User": {
      "required": [
        "email",
        "password",
        "fname",
        "lname",
        "role",
        "username"
      ],
      "properties": {
        "username": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        },
        "lname": {
          "type": "string"
        },
        "fname": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    },
    "UpdatedSuccessfully": {
      "required": [
        "token_id",
        "message"
      ],
      "properties": {
        "token_id": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "UnAuthorized": {
      "properties": {
        "msg": {
          "type": "array",
          "items": {
            "properties": {
              "location": {
                "type": "string"
              },
              "param": {
                "type": "string"
              },
              "msg": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}