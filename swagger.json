{
  "swagger": "2.0",
  "info": {
    "version": "0.1.0",
    "title": "rythm_api",
    "description": "RESTful api for rythm app"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Auth",
      "description": "API for authorization/authenticating users in the system"
    },
    {
      "name": "Users",
      "description": "API for users in the system"
    },
    {
      "name": "Todo",
      "description": "API for handling todo lists in the system"
    }
  ],
  "securityDefinitions": {
    "Bearer": {
      "name": "Authorization",
      "description": "API Token",
      "type": "apiKey",
      "in": "header"
    }
  },
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/todo": {
      "post": {
        "tags": [
          "Todo"
        ],
        "summary": "Submit new todo list",
        "description": "Submit new todo list",
        "parameters": [
          {
            "name": "todo",
            "in": "body",
            "description": "Todo list user is adding",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New todo",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Todo"
        ],
        "summary": "Update current todo",
        "description": "Todo must be owned by JWT holder",
        "parameters": [
          {
            "name": "todo",
            "in": "body",
            "description": "Todo list user is updating",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Updated todo",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/todo/{TODO_ID}": {
      "delete": {
        "tags": [
          "Todo"
        ],
        "summary": "Delete a todo",
        "description": "TODO_ID must be owned by JWT holder",
        "parameters": [
          {
            "name": "TODO_ID",
            "in": "path",
            "description": "Delete by todo_id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Todo_id and message",
            "schema": {
              "$ref": "#/definitions/UpdatedSuccessfully"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/todo?category={CATEGORY}&todo_id={TODO_ID}&search={STRING}&user_id={USER_ID}&username={USERNAME}": {
      "get": {
        "tags": [
          "Todo"
        ],
        "summary": "Get a list of todos",
        "description": "If JWT does not match user_id no private todos will be returned.",
        "parameters": [
          {
            "name": "CATEGORY",
            "in": "query",
            "description": "Query based on category",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "TODO_ID",
            "in": "query",
            "description": "Query based on todo_id",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "SEARCH",
            "in": "query",
            "description": "Query titles and descriptions based on string",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "USER_ID",
            "in": "query",
            "description": "Query based on user_id",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "USERNAME",
            "in": "query",
            "description": "Query based on username",
            "schema": {
              "type": "string"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list of todos",
            "schema": {
              "$ref": "#/definitions/ListTodos"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Register new user in system",
        "description": "Register new user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/activate/{ACTIVATION_TOKEN}": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Activate user",
        "parameters": [
          {
            "name": "ACTIVATION_TOKEN",
            "in": "path",
            "required": true,
            "description": "ACTIVATION_TOKEN for user",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "User Login",
        "description": "Login user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "required": [
                "email",
                "password"
              ],
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "User logged in successfully.",
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    },
    "users?user_id={USER_ID}&username={USERNAME}": {
      "get": {
        "tags": [
          "Users"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "USER_ID",
            "in": "query",
            "summary": "Query user based on user id",
            "description": "User id must match what is found in JWT",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "USERNAME",
            "in": "query",
            "summary": "Query user based on username",
            "description": "Username must match what is found in JWT",
            "schema": {
              "type": "string"
            }
          }
        ],
        "description": "Get a user by user_id or username. If neither is found will return all users if JWT indicates correct role.",
        "responses": {
          "200": {
            "description": "User profile",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "description": "UnAuthorized",
            "schema": {
              "$ref": "#/definitions/UnAuthorized"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Todo": {
      "required": [
        "user_id",
        "username",
        "private",
        "title",
        "description",
        "category",
        "list"
      ],
      "properties": {
        "user_id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "todo_id": {
          "type": "string"
        },
        "master": {
          "type": "boolean"
        },
        "master_id": {
          "type": "string"
        },
        "private": {
          "type": "boolean"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "list": {
          "type": "array",
          "$ref": "#/definitions/TodoItem"
        }
      }
    },
    "TodoItem": {
      "required": [
        "title",
        "description"
      ],
      "properties": {
        "item_name": {
          "type": "string"
        },
        "instructions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string"
        }
      }
    },
    "ListTodos": {
      "required": [
        "list"
      ],
      "properties": {
        "list": {
          "type": "array",
          "$ref": "#/definitions/Todo"
        }
      }
    },
    "User": {
      "required": [
        "email",
        "password",
        "fname",
        "lname",
        "role",
        "username"
      ],
      "properties": {
        "username": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        },
        "lname": {
          "type": "string"
        },
        "fname": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    },
    "UpdatedSuccessfully": {
      "required": [
        "token_id",
        "message"
      ],
      "properties": {
        "token_id": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "UnAuthorized": {
      "properties": {
        "msg": {
          "type": "array",
          "items": {
            "properties": {
              "location": {
                "type": "string"
              },
              "param": {
                "type": "string"
              },
              "msg": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}